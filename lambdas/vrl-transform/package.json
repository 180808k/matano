{
  "name": "@matano/vrl-transform",
  "version": "1.0.0",
  "scripts": {
    "build": "rm -rf dist && mkdir -p dist && concurrently 'esbuild transform.ts --platform=node --external:@matano/vrl-transform-bindings --external:aws-sdk --outfile=dist/output.js --bundle --loader:.ts=ts' 'tsc --noEmit'",
    "watch": "tsc -w",
    "test": "jest"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.77",
    "@types/jest": "^26.0.10",
    "@types/node": "^18.0.1",
    "@types/prettier": "^2.6.3",
    "aws-sdk": "^2.1167.0",
    "concurrently": "^7.2.2",
    "esbuild": "^0.14.48",
    "jest": "^26.4.2",
    "ts-jest": "^26.2.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.7"
  },
  "prettier": {
    "printWidth": 120
  },
  "dependencies": {
    "@matano/msk-authenticator": "1.0.0",
    "@matano/vrl-transform-bindings": "1.0.0",
    "kafkajs": "^2.2.0-beta.0"
  }
}
